<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ? "
        android:id="@+id/button4"
        android:background="@drawable/abc_btn_switch_to_on_mtrl_00001"
        android:textColor="#0084ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:text="Lucro Parcial"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker3"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:layout_toStartOf="@+id/datePicker4"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Data inicial"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Data final"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="45dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker4"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_alignTop="@+id/datePicker3"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/datePicker3"
        android:clickable="false"
        android:contentDescription="teste"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar lucro"
        android:id="@+id/lucroButton"
        android:layout_above="@+id/button4"
        android:layout_alignEnd="@+id/datePicker4" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/datePicker3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_above="@+id/lucroButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView8"
        android:layout_below="@+id/listView2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button4"
        android:layout_toStartOf="@+id/lucroButton" />

</RelativeLayout>