<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/listView"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp"
        android:layout_below="@+id/CancVenda" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Venda"
        android:id="@+id/CancVenda"
        android:layout_alignTop="@+id/cancelar_text"
        android:layout_alignParentEnd="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ? "
        android:id="@+id/button4"
        android:background="@drawable/abc_btn_switch_to_on_mtrl_00001"
        android:textColor="#0084ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelar_text"
        android:hint="Venda a cancelar"
        android:inputType="number"
        android:numeric="integer"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp"
        android:layout_toStartOf="@+id/CancVenda" />


    <TextView
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:text="Cancelar Venda"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/button4"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Data inicial"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_above="@+id/datePicker"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Data final"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/CancVenda"
        android:layout_marginEnd="27dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker2"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_alignTop="@+id/datePicker"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/datePicker"
        android:clickable="false"
        android:contentDescription="teste"
        android:layout_toStartOf="@+id/CancVenda"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar Vendas"
        android:id="@+id/FiltrarVendas"
        android:layout_below="@+id/datePicker2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>