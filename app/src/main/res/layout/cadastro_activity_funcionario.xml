<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Cadastrar"
        android:id="@+id/BtnCadastrar"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaCadastro"
        android:hint="Senha"
        android:password="true"
        android:capitalize="none"
        android:singleLine="true"
        android:layout_above="@+id/BtnCadastrar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="126dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailCadastro"
        android:hint="e-mail"
        android:capitalize="none"
        android:singleLine="true"
        android:layout_above="@+id/telefoneCadastro"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usuarioCadastro"
        android:hint="Usuário"
        android:singleLine="true"
        android:capitalize="none"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/senhaCadastro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/nomeCadastro"
        android:capitalize="words"
        android:singleLine="true"
        android:layout_above="@+id/emailCadastro"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telefoneCadastro"
        android:hint="Telefone"
        android:phoneNumber="true"
        android:digits="0123456789+"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Novo Funcionário"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:textSize="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ? "
        android:id="@+id/button2"
        android:background="@drawable/abc_btn_switch_to_on_mtrl_00001"
        android:textColor="#0084ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>