<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codigo"
        android:hint="Código"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoria"
        android:layout_below="@+id/textView_categoria"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preco_venda"
        android:hint="Preço de Venda"
        android:numeric="decimal"
        android:layout_below="@+id/textView_venda"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preco_compra"
        android:hint="Preço de Compra"
        android:numeric="decimal"
        android:layout_below="@+id/textView_compra"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantidade"
        android:hint="Quantidade"
        android:inputType="number"
        android:layout_below="@+id/textView_quantidade"
        android:layout_alignStart="@+id/textView_quantidade"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Produto"
        android:id="@+id/cadastrarProd"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/le_codigo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome_prod"
        android:hint="Nome"
        android:layout_below="@+id/textView_nome"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ler código de barras"
        android:id="@+id/le_codigo"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/cadastrarProd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código"
        android:id="@+id/textView_codigo"
        android:visibility="visible"
        android:layout_marginBottom="46dp"
        android:layout_alignBottom="@+id/codigo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:id="@+id/textView_categoria"
        android:layout_below="@+id/codigo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço de Venda"
        android:id="@+id/textView_venda"
        android:layout_marginTop="21dp"
        android:visibility="visible"
        android:layout_below="@+id/categoria"
        android:layout_alignStart="@+id/textView_quantidade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço de Compra"
        android:id="@+id/textView_compra"
        android:layout_marginTop="28dp"
        android:visibility="visible"
        android:layout_below="@+id/preco_venda"
        android:layout_alignStart="@+id/textView_venda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade"
        android:id="@+id/textView_quantidade"
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/preco_compra" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textView_nome"
        android:visibility="visible"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/quantidade"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro/Alteração de Produtos"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/textView_codigo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ? "
        android:id="@+id/button"
        android:background="@drawable/abc_btn_switch_to_on_mtrl_00001"
        android:textColor="#0084ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar Produto"
        android:id="@+id/Pesq_Prod"
        android:layout_below="@+id/nome_prod"
        android:layout_alignStart="@+id/cadastrarProd"
        android:layout_alignEnd="@+id/le_codigo" />

</RelativeLayout>